    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 202) {",
                  "  try {",
                  "    let jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.token);",
                  "    console.log('✅ Token saved to collection variable');",
                  "  } catch(e) {",
                  "    console.log('❌ Could not parse response as JSON');",
                  "  }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"johndoe\",\n  \"password\": \"your_password_here\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "protocol": "{{protocol}}",
              "host": [
                "{{hostname}}"
              ],
              "port": "{{port}}",
              "path": [
                "auth",
                "login"
              ]
            },
            "description": "User login endpoint. Returns JWT token on successful login. Token is automatically saved to {{token}} variable."
          },
          "response": []
        },
        {
          "name": "Verify JWT",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "description": "JWT token from login response"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": ""
            },
            "url": {
              "raw": "{{base_url}}/auth/verify",
              "protocol": "{{protocol}}",
              "host": [
                "{{hostname}}"
              ],
              "port": "{{port}}",
              "path": [
                "auth",
                "verify"
              ]
            },
            "description": "Verify JWT token validity. Uses token from {{token}} variable with Bearer prefix"
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
